@model Categories

<form method="post"> 
	
	<div class="border p-3 mt-5">
		<div class="row pb-3">
			<h2 class="text-primary">Add a Book Category</h2>
		</div>
		<hr />
		<div class="mb-3">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-bg-danger"></span> 
		</div>
		
		<button type="submit" class="btn btn-lg btn-primary" style="width:200px">Add a Book Category</button>
		
		<a asp-controller="Categories" asp-action="Index" class="btn btn-lg btn-primary" style="width:200px">Return to Book Categories</a>

	</div>




</form> 

